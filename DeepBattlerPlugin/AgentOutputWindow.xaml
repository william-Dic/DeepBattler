<Window x:Class="DeepBattlerPlugin.AgentOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeepBattler Suggestion" Height="300" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">
    <Border BorderBrush="#FF8B4513" BorderThickness="2" CornerRadius="10" 
            Background="#F0F0F0" Opacity="0.95">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#8B4513" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ» DeepBattler Suggestion" 
                               Foreground="White" FontWeight="Bold" 
                               FontSize="14" Margin="10,5" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="âœ•" Width="30" Height="30" 
                            Click="CloseButton_Click" Background="Transparent" 
                            Foreground="White" BorderThickness="0" FontSize="16"
                            Cursor="Hand"/>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                          Margin="10" Background="White" BorderBrush="#CCCCCC" 
                          BorderThickness="1" Padding="15">
                <TextBlock x:Name="OutputTextBlock" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           FontWeight="Normal"
                           LineHeight="22"
                           Foreground="#1a1a1a"
                           Text="[PLACEHOLDER] This is a placeholder text for DeepBattler suggestions.&#x0a;&#x0a;The agent's advice will appear here when available.&#x0a;&#x0a;Example suggestion:&#x0a;'Buy that strong minion and upgrade your tavern - we're building an army!'"/>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,8,8" 
                    BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Status: Ready" 
                           FontSize="10" 
                           Foreground="#666666" 
                           Margin="10,5" 
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>

